{
  "source": ["./src/styles/tokens/**/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "scss",
      "buildPath": "./src/styles/build/",
      "files": [{
        "destination": "tokens.scss",
        "format": "scss/variables"
      }]
    },
    "css": {
      "transformGroup": "css",
      "buildPath": "./src/styles/build/",
      "files": [
        {
          "format": "css/variables",
          "destination": "tokens.css"
        }
      ]
    },
    "json": {
      "transformGroup": "js",
      "buildPath": "./src/styles/build/",
      "files": [
        {
          "format": "json/nested",
          "destination": "tokens.json"
        }
      ]
    }
  }
}
